
<%= form_with model: @post do |f| %>

  <div class="form-group">
    <%= f.label :説明文 %>
    <%= f.text_area :introduction, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :画像 %>
    <%= f.file_field :image, accept: "image/*", class: 'form-control book_body' %>
  </div>
  
  <%= f.submit '投稿' %>

<% end %>