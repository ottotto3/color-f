<div class='col-md-8 offset-md-1'>
  <div class="row">
    <div class="col-12 color_show mt-3" style="background-color: <%= post.color %>;"></div>
    <div class='col-4 mt-3'>
      <%= link_to item_path(post.item) do %>
        <%= image_tag post.item.get_image, class: 'img-fluid img-show' %>
      <% end %>
    </div>
    <div class='col-7'>
      <h4 class='mt-5'>
        <%= link_to item_path(post.item) do %>
          <%= post.item.name %>
        <% end %>
      </h4>
      <p>容量・価格： <%= post.item.capacity %>ml・<%= post.item.price %>円</p>
      <p>コメント件数：<%= post.comments.count %></p>
    </div>
    <div class="col-12 border-top border-bottom mt-3 p-3">
      <div class="mr-2" style="display: inline-block; vertical-align: 3px;">
        <%= render "static.rate", post: post %>
      </div>
      <div style="display: inline-block; vertical-align: middle;">
        <h3><%= post.star %></h3>
      </div>
      <p><%= post.introduction %></p>
    </div>
    <div class="col-12">
      <%= render 'public/comments/index', post: post %>
      <%= render 'public/comments/form', post: post, comment: comment %>
    </div>
  </div>
</div>