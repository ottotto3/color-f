<div class="container">
  <div class="row">
    <h1>NEW ITEM</h1>
  </div>
  
  <div class="row">
    <div class="col d-flex align-content-between flex-wrap">
      <% @items.each do |item| %>
        <div>
          <%= link_to item_path(item) do %>
            <%= image_tag item.get_image, class: 'img-fluid item-image img-container' %>
          <% end %></br>
          <label><%= link_to item.name, item_path(item) %></label>
        </div>
      <% end %>
    </div>
  </div>
</div>