<div class="container">
  <div class="row justify-content-center ">
    <h2 class='text-new'>商品詳細</h2>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-12 text-center img-container">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col-md-8 col-sm-12">
    <table>
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>容量</th>
        <td><%= @item.capacity %>ml</td>
      </tr>
      <tr>
        <th>価格</th>
        <td><%= @item.price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <% if @item.is_active %>
            <p><strong>販売中</strong></p>
          <% elsif %>
            <p><strong>販売停止</strong></p>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center"> 
      <%= link_to edit_admin_item_path(@item), class: "btn btn-md custom-button edit_admin_item_#{@item.id}" do %>
        編集する
      <% end %>
    </div>
  </div>
</div>
