<h1>商品登録</h1>
<%= form_with model: @item, method: :post, url:admin_items_path do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品紹介</h4>
  <%= f.text_area :introduction %>
  <h4>価格</h4>
  <%= f.text_field :price %>
  <h4>容量</h4>
  <%= f.text_field :capacity %>
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, "true" %>販売中
  <%= f.radio_button :is_active, "false" %>販売停止中
  <%= f.submit '投稿' %>
<% end %>
  