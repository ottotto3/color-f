<div class="container">
  <div class="row justify-content-center ">
    <h2 class='text-new'><%= @user.name %>さんの会員詳細</h2>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>会員ID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= @user.info %></td>
      </tr>
      <tr>
        <th>好きな色</th>
        <td><div class="color_circle m-1" style="background-color: <%= @user.color %>;"></div></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @user.is_active %>
            <p class="text-success"><strong>有効</strong></p>
          <% elsif %>
            <p class="text-muted"><strong>退会</strong></p>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center"> 
        <%= link_to "編集する", edit_admin_user_path, class: "btn btn-md custom-button" %>
      </div>
    </div>
  </div>
</div>